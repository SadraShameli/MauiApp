<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiApp1.ViewModel"
             x:DataType="viewmodel:ItemsFilterViewModel"
             x:Class="MauiApp1.View.ItemsFilterPage"
             Title="{Binding Title}">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">

        <StackLayout>
            <Label Text="Choose which items to show" />
            <RadioButton Content="Item 1 only" IsChecked="True"/>
            <RadioButton Content="Item 2 only" />
            <RadioButton Content="Item 3 only" />
        </StackLayout>
        
    </VerticalStackLayout>
</ContentPage>