<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MauiApp1.Model.Item"
             xmlns:viewmodel="clr-namespace:MauiApp1.ViewModel"
             x:DataType="viewmodel:ItemsDetailViewModel"
             x:Class="MauiApp1.View.ItemsDetailPage"
             Title="{Binding Item.Name}">

    <ScrollView>
        <VerticalStackLayout>

                <Frame CornerRadius="100" IsClippedToBounds="True" Grid.RowSpan="2" Grid.Column="1" HeightRequest="160" WidthRequest="160" HorizontalOptions="Center" Padding="0" Margin="0, 80, 0, 0">
                <Image Source="{Binding Item.ImageURL}" HeightRequest="160" WidthRequest="160" Aspect="AspectFill"></Image>
                </Frame>

            <Label Text="{Binding Item.Details}"></Label>

        </VerticalStackLayout>
        
        

    </ScrollView>

</ContentPage>